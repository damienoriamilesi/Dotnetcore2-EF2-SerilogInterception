@model Pie

<h2>
    @Model.Name
</h2>

<div class="thumbnail">
    <img src="@Model.ImageThumbnailUrl" alt="@Model.Name" style="height: 210px; width:100%;" />
    <div class="caption">
        <h3 class="pull-right">
            @Model.Price.ToString("c")
        </h3>
        <h3>
            @Model.Name
            
        </h3>
        <p>
            @Model.LongDescription
        </p>
    </div>
</div>